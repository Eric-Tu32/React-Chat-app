{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "baseUrl": ".", 
        "paths": {
          "@shared/*": ["../shared/*"]
        }
  },
  "include": ["src", "../shared"],
  "exclude": ["node_modules"]
}